body {
    background-color: white;
    color: black;
    text-align: center;
}

label {
    margin-right: 5px;
    margin-top: 7.5px;
    margin-bottom: 7.5;
}

input {
    margin-top: 7.5px;
    margin-bottom: 7.5px;
}

select {
    margin-top: 7.5px;
    margin-bottom: 7.5px;
}

.button {
    width: 10%;
    border-style: solid;
    border-color: green;
    border-radius: 25px;
    max-width: 10%;
    margin: auto;
    background-color: green;
    margin-right: 10px;
}

.buttonred {
    width: 10%;
    border-style: solid;
    border-color: red;
    border-radius: 25px;
    max-width: 10%;
    margin: auto;
    background-color: red;
    margin-left: 10px;
}

.cate {
    border-style: solid;
    border-color: lightgray;
    color: black;
    border-radius: 25px;
    max-width: 25%;
    margin: auto;
    background-color: gray;
}